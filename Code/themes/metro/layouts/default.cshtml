    <script type="text/javascript" src="//cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML"></script>
	<script type="text/javascript" src="@Model.Root/javascripts/jquery.js"></script>
	<script type="text/javascript" src="@Model.Root/javascripts/metro.js"></script>
  </head>
  <body>
